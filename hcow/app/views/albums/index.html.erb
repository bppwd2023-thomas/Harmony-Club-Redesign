<p style="color: green"><%= notice %></p>

<h1>Albums</h1>

<div id="albums">
    <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
  <% @albums.each do |album| %>
        <tr>
          <th scope="row"><%= album.title %></th>
          <td><%=album.description %></td>
          <td> <%= link_to "Show", album, class: "btn btn-primary"%> </td>
        </tr>
  <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New Album", new_album_path, class: "btn btn-success"%>
<%= link_to "Back", control_panel_index_path, class: "btn btn-warning"%>
