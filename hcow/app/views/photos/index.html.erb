<p style="color: green"><%= notice %></p>

<h1>Photos</h1>

<div id="photos">
    <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
  <% @photos.each do |photo| %>
        <tr>
          <th scope="row"><%= photo.title %></th>
          <td><%=photo.description %></td>
          <td><%= link_to "Show", photo, class: "btn btn-primary"%></td>
          <td><%= link_to "Edit", photo, class: "btn btn-warning"%></td>
          <td><%= button_to "Destroy", photo, method: :delete, class: "btn btn-danger"%></td>
        </tr>
  <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New photo", new_photo_path, class: "btn btn-success"%>
<%= link_to "Back", control_panel_index_path, class: "btn btn-warning"%>
