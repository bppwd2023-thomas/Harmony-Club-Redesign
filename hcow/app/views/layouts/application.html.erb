<!DOCTYPE html>
<html>
  <head>
    <title>Hcow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="blue">

    <!-- Navigation Bar -->
    
    <nav class="navbar navbar-dark red">
      <div class="container-fluid">
        <a class="navbar-brand text-white bold-text text-uppercase ps-3" href="/site/home">Harmony Club of Worcester</a>
        <button class="navbar-toggler ms-auto blue" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>
    <div class="collapse" id="navbarToggleExternalContent">
      <div class="red ps-5 pb-3 pe-5">
        <ul class="navbar-nav">
          <li class="text-white text-uppercase bold-text">
            <%= link_to "Home", site_home_path, class: "nav-link" %>
          </li>
          <li class="text-white text-uppercase bold-text">
            <%= link_to "CRUD", control_panel_index_path, class: "nav-link" %>
          </li>
          <li class="text-white text-uppercase bold-text">
          <%= link_to "Events", calendar_index_path, class: "nav-link" %>
          </li>
          <% if(user_signed_in?) %>
            <li class="text-white text-uppercase bold-text">
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger"  %>
            </li>
          <% else %>
            <li class="text-white text-uppercase bold-text">
              <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-secondary" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Page Content -->
    <div class="container white content topPadding vh-100 pb-5">

      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>

    </div>

    <!-- Footer -->
    <div id="footer">
      <div class="page-container red text-light">
        <div class="content-wrap">
          <div class="text-center border-bottom border-light">
            <a class="text-light text-decoration-none" href="/">Harmony Club of Worcester | <%= @current_year %></a>
          </div>
          <div class="row justify-content-center pt-1">
            <!-- @sections.each do |s| -->
              <div class="col-lg-2 col-md-4 col-sm-6 mb-3 text-center">
                <h6 class="d-inline"><!-- s.title -->title goes here<h6>
                <ul class="d-inline footer-list"><li></li><li></li><li></li>stuff goes here</ul>
              </div>
            <!-- end -->
          </div>
        </div>
      </div>
    </div>

  </body>
</html>