<!DOCTYPE html>
<html>
  <head>
    <title>Hcow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="blue">

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg red text-uppercase fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand text-white bold-text" href="#">Harmony Club of Worcester</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", site_home_path, class: "nav-link" %>
            </li>
            <li>
              <%= link_to "CRUD", control_panel_index_path, class: "nav-link" %>
            </li>
            <li>
            <%= link_to "Calendar", calendar_index_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav ms-auto">
            <% if(user_signed_in?) %>
              <li class="nav-item">
                <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger"  %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-secondary" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container white content topPadding vh-100 pb-5">

      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>

    </div>

    <!-- Footer -->
    <div id="footer">
      <div class="page-container red text-light">
        <div class="content-wrap">
          <div class="text-center border-bottom border-light">
            <a class="text-light text-decoration-none" href="/">Harmony Club of Worcester | <%= @current_year %></a>
          </div>
          <div class="row justify-content-center pt-1">
            <!-- @sections.each do |s| -->
              <div class="col-lg-2 col-md-4 col-sm-6 mb-3 text-center">
                <h6 class="d-inline"><!-- s.title -->title goes here<h6>
                <ul class="d-inline footer-list"><li></li><li></li><li></li>stuff goes here</ul>
              </div>
            <!-- end -->
          </div>
        </div>
      </div>
    </div>

  </body>
</html>