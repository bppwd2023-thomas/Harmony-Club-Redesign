<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :allday, style: "display: block" %>
    <%= form.check_box :allday %>
  </div>

  <div>
    <%= form.label :eventstart, style: "display: block" %>
    <%= form.datetime_field :eventstart %>
  </div>

  <div>
    <%= form.label :eventend, style: "display: block" %>
    <%= form.datetime_field :eventend %>
  </div>

  <div>
    <%= form.label :occurence, style: "display: block" %>
    <%= form.number_field :occurence %>
  </div>

  <div>
    <%= form.label :details, style: "display: block" %>
    <%= form.text_area :details %>
  </div>

  <% if Event.where(featured: true).length() >= 4 && event.featured == false %>
    <div>
      <p>Maximum Limit Reached for Featured Events (4)</p>
    </div>
  <% else %>
    <div>
      <%= form.label :featured, style: "display: block" %>
      <%= form.check_box :featured %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
